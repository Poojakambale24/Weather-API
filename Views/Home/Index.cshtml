@{
    ViewData["Title"] = "Weather Service Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: sans-serif;
            background-image: url('/images/background.png');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            background-repeat: no-repeat;
            min-height: 100vh;
            color: #000;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 40px 20px;
            text-align: center;
        }

        h1 {
            color: #000;
            font-size: 2em;
            font-weight: normal;
            text-shadow: 2px 2px 4px rgba(255, 255, 255, 0.3);
            margin-bottom: 10px;
        }

        .subtitle {
            color: #000;
            font-size: 1em;
            font-weight: normal;
            margin-bottom: 60px;
            text-shadow: 1px 1px 2px rgba(255, 255, 255, 0.3);
        }

        .search-form {
            background: none;
            padding: 30px 0;
            margin-bottom: 30px;
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px;
        }

        .search-form.hidden {
            display: none;
        }

        input[type="text"] {
            width: 300px;
            padding: 12px 20px;
            font-size: 0.95em;
            font-family: sans-serif;
            font-weight: normal;
            border: 2px solid #000;
            border-radius: 25px;
            background: rgba(255, 255, 255, 0.9);
            color: #000;
            outline: none;
            transition: all 0.3s;
        }

        input[type="text"]:focus {
            background: rgba(255, 255, 255, 1);
            border-color: #333;
        }

        input[type="text"]::placeholder {
            color: #666;
            font-weight: normal;
        }

        button {
            padding: 12px 30px;
            font-size: 0.95em;
            font-family: sans-serif;
            font-weight: normal;
            border: 2px solid #000;
            border-radius: 25px;
            background: rgba(255, 255, 255, 0.9);
            color: #000;
            cursor: pointer;
            transition: all 0.3s;
        }

        button:hover {
            background: rgba(0, 0, 0, 0.8);
            color: #fff;
        }

        .close-btn {
            margin-bottom: 20px;
        }

        .error {
            color: #dc3545;
            font-size: 1em;
            font-weight: normal;
            text-align: center;
            padding: 15px;
            margin-bottom: 20px;
            background: rgba(255, 255, 255, 0.9);
            border: 2px solid #dc3545;
            border-radius: 10px;
        }

        .result-section {
            margin-top: 30px;
        }

        .result-section.hidden {
            display: none;
        }

        .city-title {
            font-size: 1.5em;
            font-weight: normal;
            color: #000;
            text-shadow: 2px 2px 4px rgba(255, 255, 255, 0.3);
            margin-bottom: 20px;
        }

        .weather-data {
            background: none;
            padding: 0;
            line-height: 1.8;
            text-align: left;
            max-width: 600px;
            margin: 0 auto;
        }

        .weather-data pre {
            color: #000;
            font-size: 0.9em;
            font-family: sans-serif;
            font-weight: normal;
            white-space: pre-wrap;
            word-wrap: break-word;
            text-shadow: 1px 1px 2px rgba(255, 255, 255, 0.5);
            background: none;
            padding: 0;
            margin: 0;
            border: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Weather Service Dashboard</h1>
        <p class="subtitle">Get real-time weather information for any city worldwide</p>

        <div class="search-form @(ViewBag.WeatherData != null ? "hidden" : "")" id="searchForm">
            <form method="post" action="/Home/GetWeather" style="display: flex; gap: 10px;">
                <input type="text" 
                       name="city" 
                       placeholder="Enter City Name" 
                       required 
                       autofocus>
                <button type="submit">Enter</button>
            </form>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="error">
                @ViewBag.Error
            </div>
            <button class="close-btn" onclick="window.location.href='/'">Try Again</button>
        }

        @if (ViewBag.WeatherData != null)
        {
            <div class="result-section" id="resultSection">
                <button class="close-btn" onclick="window.location.href='/'">âœ•</button>
                <h2 class="city-title">Weather in @ViewBag.City</h2>
                <div class="weather-data">
                    <pre>@ViewBag.WeatherData</pre>
                </div>
            </div>
        }
    </div>
</body>
</html>
