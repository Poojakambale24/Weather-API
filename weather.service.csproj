<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <PackageId>weather.service</PackageId>
    <RootNamespace>weather.service</RootNamespace>
    <TargetFramework>net9.0</TargetFramework>
    <RuntimeIdentifiers>linux-x64</RuntimeIdentifiers>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>

    <!-- Runtime perf/settings -->
    <ServerGarbageCollection>true</ServerGarbageCollection>
    <TieredCompilation>true</TieredCompilation>

    <!-- Publish knobs (optional but nice for prod) -->
    <PublishReadyToRun>true</PublishReadyToRun>
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>false</SelfContained> <!-- flip to true if you ship the runtime -->
    <DebugType>portable</DebugType>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="cloops.microservices" Version="*" />
    <PackageReference Include="Microsoft.Extensions.Http" Version="9.0.0" />

    <!-- Bring in your central schema package here -->
  </ItemGroup>

</Project>

