@{
    ViewData["Title"] = "Weather Service Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-image: url('/images/background.png');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            background-repeat: no-repeat;
            min-height: 100vh;
            color: #000;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 40px 20px;
        }

        h1 {
            color: #000;
            font-size: 3em;
            text-shadow: 2px 2px 4px rgba(255, 255, 255, 0.3);
            margin-bottom: 20px;
            text-align: center;
        }

        .subtitle {
            color: #000;
            font-size: 1.2em;
            text-align: center;
            margin-bottom: 40px;
            text-shadow: 1px 1px 2px rgba(255, 255, 255, 0.3);
        }

        .search-form {
            background: none;
            padding: 30px 0;
            margin-bottom: 30px;
        }

        .input-group {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
        }

        input[type="text"] {
            flex: 1;
            padding: 15px 20px;
            font-size: 1.1em;
            border: 2px solid #000;
            background: rgba(255, 255, 255, 0.9);
            color: #000;
            outline: none;
            transition: all 0.3s;
        }

        input[type="text"]:focus {
            background: rgba(255, 255, 255, 1);
            border-color: #333;
        }

        input[type="text"]::placeholder {
            color: #666;
        }

        button {
            padding: 15px 40px;
            font-size: 1.1em;
            font-weight: bold;
            border: 2px solid #000;
            background: rgba(255, 255, 255, 0.9);
            color: #000;
            cursor: pointer;
            transition: all 0.3s;
        }

        button:hover {
            background: rgba(0, 0, 0, 0.8);
            color: #fff;
            transform: translateY(-2px);
        }

        .error {
            color: #dc3545;
            font-size: 1.1em;
            text-align: center;
            padding: 15px;
            margin-bottom: 20px;
            background: rgba(255, 255, 255, 0.9);
            border: 2px solid #dc3545;
            font-weight: bold;
        }

        .result-section {
            margin-top: 30px;
        }

        .city-title {
            font-size: 2em;
            color: #000;
            text-shadow: 2px 2px 4px rgba(255, 255, 255, 0.3);
            margin-bottom: 20px;
        }

        .weather-data {
            background: none;
            padding: 0;
            line-height: 1.8;
        }

        .weather-data pre {
            color: #000;
            font-size: 1em;
            font-family: 'Courier New', monospace;
            white-space: pre-wrap;
            word-wrap: break-word;
            text-shadow: 1px 1px 2px rgba(255, 255, 255, 0.5);
            background: none;
            padding: 0;
            margin: 0;
            border: none;
        }

        .feature-list {
            margin-top: 40px;
            color: #000;
            text-shadow: 1px 1px 2px rgba(255, 255, 255, 0.3);
        }

        .feature-list h3 {
            font-size: 1.5em;
            margin-bottom: 15px;
        }

        .feature-list ul {
            list-style: none;
            padding-left: 0;
        }

        .feature-list li {
            padding: 8px 0;
            font-size: 1.1em;
        }

        .feature-list li:before {
            content: "‚úì ";
            font-weight: bold;
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>üå§Ô∏è Weather Service Dashboard</h1>
        <p class="subtitle">Get real-time weather information for any city worldwide</p>

        <div class="search-form">
            <form method="post" action="/Home/GetWeather">
                <div class="input-group">
                    <input type="text" 
                           name="city" 
                           placeholder="Enter city name (e.g., San Francisco, Tokyo, London)" 
                           required 
                           autofocus>
                    <button type="submit">Get Weather</button>
                </div>
            </form>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="error">
                @ViewBag.Error
            </div>
        }

        @if (ViewBag.WeatherData != null)
        {
            <div class="result-section">
                <h2 class="city-title">Weather in @ViewBag.City</h2>
                <div class="weather-data">
                    <pre>@ViewBag.WeatherData</pre>
                </div>
            </div>
        }

        @if (ViewBag.WeatherData == null && ViewBag.Error == null)
        {
            <div class="feature-list">
                <h3>Features:</h3>
                <ul>
                    <li>Real-time weather data from wttr.in API</li>
                    <li>10-minute caching for improved performance</li>
                    <li>NATS messaging support on weather.request subject</li>
                    <li>Temperature in Celsius and Fahrenheit</li>
                    <li>Wind speed, humidity, and UV index</li>
                    <li>Current conditions and forecast</li>
                </ul>
            </div>
        }
    </div>
</body>
</html>
